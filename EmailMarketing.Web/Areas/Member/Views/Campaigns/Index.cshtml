@model CampaignsModel

@{
    ViewData["Title"] = "Campaign Lists";
}

<!-- Main content -->
<div class="content-wrapper">
    <!-- Content area -->
    <div class="content">

        <div class="pb-3">
            <h4 class="d-inline">Campaign Lists</h4>
            <a asp-area="Member" asp-controller="Campaigns" asp-action="Add" class="btn btn-primary float-right">
                <i class="icon-plus-circle2"></i> Add Campaign </a>
        </div>

        <!-- Basic datatable -->
        <div class="card">
            <div class="card-header header-elements-inline">
                <h5 class="card-title">Campaign List</h5>
                <div class="header-elements">
                    <div class="list-icons">
                        <a class="list-icons-item" data-action="collapse"></a>
                        <a class="list-icons-item" data-action="reload"></a>
                        <a class="list-icons-item" data-action="remove"></a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <partial name="_ActionMessage" model="@Model.Response" />
            </div>

            <table class="table" id="campaign-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Processing</th>
                        <th>Sender Email</th>
                        <th>Send Date Time</th>
                        <th>Send Email Address</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <!-- /basic datatable -->

    </div>
    <!-- /content area -->
</div>
<!-- /Main content -->
@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
    <partial name="~/Views/Bundle/_DatatableScriptsPartial.cshtml" />
    <script src="~/js/ajax-call.js"></script>
    <script src="~/theme/global_assets/js/main/jquery.min.js"></script>
    <script src="~/theme/global_assets/js/main/bootstrap.bundle.min.js"></script>
    <script src="~/theme/global_assets/js/plugins/tables/datatables/datatables.min.js"></script>
    <script src="~/js/project/campaign.js"></script>

    <script>
        $(function () {
            var url = '@Url.Action("ViewCampaigns", "Campaigns", new { Area = "Member" })';
            var ReportUrl = '@Url.Action("ViewCampignWiseReport", "Campaigns", new { Area = "Member" })';
            loadDatatable(url, ReportUrl);

        });
    </script>


}