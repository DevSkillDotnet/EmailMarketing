
@model ChangePasswordConfirmationModel

@{
    ViewData["Title"] = "Success";
}


<div class="page-content">

    <div class="content-wrapper">

        <div class="content d-flex justify-content-center align-items-center">

            <!-- Change Password Confirmation form -->
            <div class="card mb-0">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="icon-checkmark4 icon-2x text-success border-success border-3 rounded-round p-3 mb-3 mt-1"></i>
                        <h5 class="mb-0">@ViewData["Title"]</h5>
                        <span class="d-block text-muted mb-3">Password Change Successful</span>
                        <a asp-controller="Account" asp-action="Login" class="btn bg-teal-400 btn-labeled btn-labeled-left"><b><i class="icon-user"></i></b> Login</a>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
