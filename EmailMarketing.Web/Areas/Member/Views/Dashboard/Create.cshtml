@model ContactModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form enctype="multipart/form-data" asp-area="Member" asp-controller="Dashboard" asp-action="Create"
      method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="GroupId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="GroupId" class="form-control" placeholder="Name">
            <span asp-validation-for="GroupId" class="text-danger"></span>
        </div>
    </div>
    

    
    @*  asp-for tag helper is set to "Photo" property. "Photo" property type is IFormFile
        so at runtime asp.net core generates file upload control (input type=file)
    *@

    <div class="form-group row">
        <label asp-for="FileUrl" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="FileUrl" class="form-control custom-file-input">
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>

    @*This script is required to display the selected file in the file upload element*@

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>

