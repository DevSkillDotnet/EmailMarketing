
@{
    ViewData["Title"] = "EditCustomFields";
}

<!-- Main content -->
<div class="content-wrapper">
    <!-- Content area -->
    <div class="content">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header header-elements-inline">
                        <h5 class="card-title text-primary">Edit Custom Field</h5>
                    </div>

                    <div class="card-body">
                        <form action="" method="post">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group row">
                                        <label for="fieldName" class="col-sm-3 col-form-label">Field Name</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" id="fieldName" value="City">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between pt-3">
                                <a asp-controller="Contacts" asp-action="CustomFields" asp-area="Member" class="btn btn-light"><i class="icon-arrow-left52"></i> Back</a>
                                <button type="submit" class="btn btn-primary"><i class="icon-file-check2"></i> Save</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Content area -->
</div>
<!-- /Main content -->



