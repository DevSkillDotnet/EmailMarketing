
@{
    ViewData["Title"] = "Index";
}


<!-- Content area -->
<div class="content pt-0">

    <!-- Basic datatable -->
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title">Users</h5>
            <div class="header-elements">
                <div class="list-icons">
                    <a class="list-icons-item" data-action="collapse"></a>
                    <a class="list-icons-item" data-action="reload"></a>
                    <a class="list-icons-item" data-action="remove"></a>
                </div>
            </div>
        </div>

        <div class="card-body">
            @*<partial name="_ActionMessage" model="@Model.Response" />*@
        </div>
        <table class="table" id="user-table">
            <thead>
                <tr>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>EmailConfirmed</th>
                    <th>PhoneNumber</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

    </div>
    <!-- /basic datatable -->
</div>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
    <partial name="~/Views/Bundle/_DatatableScriptsPartial.cshtml" />
    <script src="~/js/ajax-call.js"></script>
    <script src="~/theme/global_assets/js/main/jquery.min.js"></script>
    <script src="~/theme/global_assets/js/plugins/tables/datatables/datatables.min.js"></script>
    <script src="~/js/project/user.js"></script>

    <script>
        $(function () {
            var url = '@Url.Action("GetUsers", "Users", new { Area = "Admin" })';
            loadDatatable(url, url);

            
        });
    </script>
}