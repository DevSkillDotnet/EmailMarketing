
@{
    ViewData["Title"] = "ChooseActions";
}

<!-- Content area -->
<div class="content">

    <div class="pb-3">
        <h4 class="d-inline">Add Contacts to Groups</h4>
    </div>

    <!-- navigation -->
    <!-- /navigation -->

    <div class="row">
        <div class="col-md-6">
            <h3>Where you want to add these contracts?</h3>


            <form action="">
                <!-- selected -->
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Select All Lists</label>
                </div>
                <div class="bg-white">
                    <p class="p-2">
                        <i class="icon-collaboration"></i>&nbsp;&nbsp; <span>No</span> <span>List</span> Selected
                    </p>
                </div>

                <div class="bg-white">
                    <ul class="list-group">
                        <li class="list-group-item border-bottom">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck2">
                                <label class="form-check-label" for="exampleCheck2">
                                    First Contract
                                    <span class="border p-1">
                                        <span>2</span>&nbsp;&nbsp;
                                        <i class="fas fa-user"></i>
                                    </span>
                                </label> &nbsp;&nbsp;
                            </div>
                        </li>
                        <li class="list-group-item border-bottom">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck2">
                                <label class="form-check-label" for="exampleCheck2">
                                    Teacher
                                    <span class="border p-1">
                                        <span>7</span>&nbsp;&nbsp;
                                        <i class="fas fa-user"></i>
                                    </span>
                                </label> &nbsp;&nbsp;
                            </div>
                        </li>
                        <li class="list-group-item border-bottom">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck2">
                                <label class="form-check-label" for="exampleCheck2">
                                    Friends
                                    <span class="border p-1">
                                        <span>6</span>&nbsp;&nbsp;
                                        <i class="fas fa-user"></i>
                                    </span>
                                </label> &nbsp;&nbsp;
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck2">
                                <label class="form-check-label" for="exampleCheck2">
                                    Students
                                    <span class="border p-1">
                                        <span>120</span>&nbsp;&nbsp;
                                        <i class="fas fa-user"></i>
                                    </span>
                                </label> &nbsp;&nbsp;
                            </div>
                        </li>
                    </ul>
                </div>
                <!-- /selected -->


                <div class="pt-3 ">
                    <a asp-area="Member" asp-controller="Contacts" asp-action="Review"  class="btn btn-primary ">Review & Confirm Upload</a>
                </div>
            </form>
        </div>

        <div class="col-md-6">
            <div class="pt-5 pl-5">
                <h3>For Create Group goto "Create Group"</h3>
            </div>
        </div>
    </div>



</div>
<!-- /content area -->
