@model CampaignsModel
@{
    ViewData["Title"] = "ViewReport";
}

<!-- Main content -->
<div class="content-wrapper">
    <!-- Content area -->
    <div class="content">
        <div class="pb-3">
            <h1 class="text-center">Report</h1>
           
            <div class="row">

                <div class="col-md-6 m-auto text-center">
                    <h3 class="mb-1 pb-0">Export Your Contacts</h3>
                    <partial name="_ActionMessage" model="@Model.Response" />
                    @*<h5 class="pt-0 mt-0">If everything looks good, click 'Confirm Upload' below.</h5>*@


                    <div class="bg-white text-left p-3 mb-3">

                        <form asp-action="Export" asp-controller="Campaigns" asp-area="Member" method="post">
                            <div class="pb-3">
                                <div class="dropdown-item form-check form-check-switchery ">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-input-switchery" asp-for="IsSendEmailNotifyForAll">
                                        <span class="font-weight-bold">Send file via email once export is complete</span>
                                    </label>
                                </div>
                            </div>
                            <div>
                                <div class="form-group row">
                                    <label for="inputEmail" class="col-md-3 col-form-label">Email</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" id="inputEmail" placeholder="Enter Email" asp-for="SendEmailAddress">
                                    </div>
                                </div>
                            </div>

                            <input type="hidden" asp-for="IsExportAll" value="true" />
                            <div class="text-center">
                                <button class="btn btn-primary"><i class="icon-file-download2 text-white"> Export All Contacts</i></button>
                            </div>
                        </form>
                    </div>
                    <h5 class="text-center">Or</h5>
                    <div class="bg-white text-left p-3 mb-3">

                        <form asp-action="Export" asp-controller="Campaigns" asp-area="Member" method="post">
                            <div class="pb-3">
                                <div class="dropdown-item form-check form-check-switchery ">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-input-switchery" asp-for="IsSendEmailNotifyForAll">
                                        <span class="font-weight-bold">Send file via email once export is complete</span>
                                    </label>
                                </div>
                            </div>
                            <div>
                                <div class="form-group row">
                                    <label for="inputEmail" class="col-md-3 col-form-label">Email</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" id="inputEmail" placeholder="Enter Email" asp-for="SendEmailAddress">
                                    </div>
                                </div>
                            </div>

                            <input type="hidden" asp-for="IsExportAll" value="false" />
                            <input type="hidden" asp-for="Id" value="3" />
                            <div class="text-center">
                                <button class="btn btn-primary"><i class="icon-file-download2 text-white"> Export All Contacts</i></button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>


    </div>
    <!-- /Content area -->
</div>

<!-- /Main content -->
