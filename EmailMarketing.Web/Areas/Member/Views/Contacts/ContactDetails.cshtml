@model ContactDetailsModel
@{
    ViewData["Title"] = "ContactDetails";
}

<!-- Content area -->
    <div class="content">

        <div class="pb-3">
            <h4 class="d-inline">Contact Details</h4>
            <a asp-area="Member" asp-controller="Contacts" asp-action="Index" class="btn btn-primary float-right">
                <i class="icon-list2"></i> Contracts
            </a>
        </div>

        <div class="card">
            <div>

            </div>
            <div class="card-body">
                <div class="row pb-3">
                    <div class="col-md-6">
                        <div class="pl-5 pr-3">
                            <div class="p-3">
                                <!-- Standard Fields -->
                                <div class="row-fluid summary pb-4">
                                    <h3 class="mb-0 pb-0">Standard Fields</h3>
                                </div>
                                @foreach (var item in Model.ContactValueMaps.Where(x => x.IsStandard).SelectMany(x => x.Values).ToList())
                                {
                                    <div class="row-fluid summary">
                                        <div class="form-group row">
                                            <div class="col-sm-3">
                                                @item.Text
                                            </div>
                                            <div class="col-sm-9">
                                                @item.Value
                                            </div>
                                        </div>
                                    </div>
                                }

                                <!-- /Standard Fields -->
                                <hr />
                                <!-- Custom Fields -->
                                <div class="row-fluid summary pb-4">
                                    <h3 class="mb-0 pb-0">Custom Fields</h3>
                                </div>

                                @foreach (var item in Model.ContactValueMaps.Where(x => !x.IsStandard).SelectMany(x => x.Values).ToList())
                                {
                                    <div class="row-fluid summary">
                                        <div class="form-group row">
                                            <div class="col-sm-3">
                                                @item.Text
                                            </div>
                                            <div class="col-sm-9">
                                                @item.Value
                                            </div>
                                        </div>
                                    </div>
                                }
                                <!-- /Custom Fields -->
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3">
                            <h3>Groups</h3>
                            <span>@Model.Groups</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <a asp-controller="Contacts" asp-action="Index" asp-area="Member" class="btn btn-light"><i class="icon-arrow-left52"></i> Back</a>
                    <a asp-route-id="@Model.Id" asp-controller="Contacts" asp-action="EditContact" asp-area="Member" class="btn btn-primary ml-2"><i class="icon-pencil7"></i> Edit</a>
                </div>
            </div>
        </div>


    </div>
<!-- /content area -->

