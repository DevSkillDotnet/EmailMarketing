@model EmailMarketing.Web.Areas.Member.Models.Contacts.SingleContactModel
@{
    ViewData["Title"] = "AddSingleContact";
}

<!-- Content area -->
<div class="content">

    <div class="card">
        <div class="card-header">
            <div class="pl-5 pr-3">
                <h4 class="card-title">Add Single Contact</h4>
            </div>
        </div>
        <hr />
        <!-- navigation -->
        <!-- /navigation -->
        <partial name="_ActionMessage" model="@Model.Response" />
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="pl-5 pr-3">
                        <h4>Add Contact Details</h4>
                        @Html.AntiForgeryToken()
                        <form id="form1" asp-area="Member" asp-controller="Contacts" asp-action="AddSingleContact" method="post">
                            <div class="form-group row">
                                <label asp-for="Email" class="col-sm-3 col-form-label">Email Address *</label>
                                <div class="col-sm-9">
                                    <input type="email" class="form-control" asp-for="Email">
                                </div>
                            </div>

                            <!-- Standard Fields -->
                            <div class="row-fluid summary pb-4">
                                <span>Standard Fields</span>
                                <a class="btn border border-primary float-right" data-toggle="collapse" data-target="#intro" id="showHide">Show</a>
                            </div>
                            <div class="row-fluid summary">
                                <div id="intro" class="collapse">

                                    @{
                                        var items = Model.ContactValueMaps;
                                        for (int i = 0; i < items.Count(); i++)
                                        {
                                            @*<input type="hidden" asp-for="@items[i].Count" />
                                                <input type="hidden" asp-for="@items[i].IsStandard" />
                                                <input type="hidden" asp-for="@items[i].IsChecked" />*@
                                            <div class="form-group row">
                                                @if (@items[i].Text.Contains("mail") == false)
                                                {
                                                    <label asp-for="@items[i].Input" class="col-sm-3 col-form-label">@items[i].Text</label>
                                                    <div class="col-sm-9">

                                                        <input type="text" class="form-control" asp-for="@items[i].Input">

                                                    </div>
                                                }
                                            </div>

                                        }
                                    }

                                </div>
                            </div>


                            <!-- Custom Fields -->

                            <div class="row-fluid summary pb-4">
                                <span>Custom Fields</span>
                                <a class="btn border border-primary float-right" data-toggle="collapse" data-target="#intro2" id="showHideCustom">Show</a>
                            </div>
                            <div class="row-fluid summary">
                                <div id="intro2" class="collapse">
                                    @{
                                        var item = Model.ContactValueMapsCustom;
                                        for (int i = 0; i < item.Count(); i++)
                                        {
                                            <div class="form-group row">
                                                @if (@item[i].Text.Contains("Date"))
                                                {
                                                    <label asp-for="@item[i].Input" class="col-sm-3 col-form-label">@item[i].Text</label>
                                                    <div class="col-sm-9">
                                                        <input type="date" class="form-control" asp-for="@item[i].Input">
                                                    </div>
                                                }
                                                else
                                                {
                                                    <label asp-for="@item[i].Input" class="col-sm-3 col-form-label">@item[i].Text</label>
                                                    <div class="col-sm-9">

                                                        <input type="text" class="form-control" asp-for="@item[i].Input">

                                                    </div>
                                                }

                                            </div>
                                        }
                                    }
                                </div>

                                @*<a asp-area="Member" asp-controller="Contacts" asp-action="AddSingleContact" class="btn btn-primary float-right"> <i class="icon-file-check2"></i> Save</a>*@

                                </div>
                        </form>

                    </div>
                </div>

                <div class="col-md-6">
                    <h3>Where you want to add this contract?</h3>
                    @Html.AntiForgeryToken()
                    <form id="form2" asp-area="Member" asp-action="AddSingleContact" asp-controller="Contacts" method="post">
                        <!-- selected -->
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="checkAll">
                            <label class="form-check-label" for="checkAll">Select All Lists</label>
                        </div>

                        <div class="bg-white">
                            <p class="p-2">
                                <i class="icon-collaboration"></i>&nbsp;&nbsp; <span>No</span> <span>List</span> Selected
                            </p>
                        </div>

                        <div class="bg-white">
                            <ul class="list-group">
                                @{
                                    var groupItems = Model.GroupSelectList;
                                    for (int i = 0; i < groupItems.Count(); i++)
                                    {
                                        <li class="list-group-item border-bottom">
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" id="exampleCheck2" asp-for="@groupItems[i].IsChecked">
                                                <label class="form-check-label" asp-for="@groupItems[i].IsChecked">
                                                    @groupItems[i].Text
                                                    <span class="border p-1">
                                                        <span>@groupItems[i].Count</span>&nbsp;&nbsp;
                                                        <i class="fas fa-user"></i>
                                                    </span>
                                                </label> &nbsp;&nbsp;
                                            </div>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                        <!-- /selected -->

                    </form>

                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button class="btn btn-primary" onclick="submitForm()">Save</button>
                        @*<input id="sub" type="button" value="Save" class="btn btn-primary" onclick="submitForm()" />*@

                    </div>
                </div>

            </div>

        </div>
    </div>

</div>
<!-- /content area -->

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>

<script>
    $('#checkAll').click(function () {
        $('input:checkbox').prop('checked', this.checked);
    });
    //var numberChecked = $('input:checkbox:checked').length;

    submitForm = function () {
        document.getElementById("form1").submit();
        document.getElementById("from2").submit();
    }


</script>