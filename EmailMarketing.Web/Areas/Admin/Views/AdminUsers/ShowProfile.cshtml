@model AdminUsersShowProfileModel

@{ ViewData["Title"] = "Profile"; }


<div class="content pt-0">

    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title text-primary">Add New Admin</h5>
            <div class="header-elements">
                <div class="list-icons">
                    <a class="list-icons-item" data-action="collapse"></a>
                    <a class="list-icons-item" data-action="reload"></a>
                    <a class="list-icons-item" data-action="remove"></a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <partial name="_ActionMessage" model="@Model.Response" />
            <div class="">
                <form asp-action="Add" asp-controller="AdminUsers" asp-area="Admin">
                    <div class="">
                        <fieldset class="mb-3">

                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row">
                                <div class="col-md-6 border-right p-2">
                                    <div class="form-group row">
                                        <label class="col-form-label col-lg-4 required" asp-for="FullName"></label>
                                        <div class="col-lg-8">
                                            <input type="text" class="form-control" asp-for="FullName">
                                            <span asp-validation-for="FullName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-form-label col-lg-4 required" asp-for="UserName"></label>
                                        <div class="col-lg-8">
                                            <input type="text" class="form-control" asp-for="UserName">
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 border-left p-2">
                                    <div class="form-group row">
                                        <label class="col-form-label col-lg-4 required" asp-for="Gender"></label>
                                        <div class="col-lg-8">
                                            <input type="text" class="form-control" asp-for="Gender">
                                            <span asp-validation-for="Gender" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-form-label col-lg-4 required" asp-for="PhoneNumber"></label>
                                        <div class="col-lg-8">
                                            <input type="text" class="form-control" asp-for="PhoneNumber">
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </fieldset>
                    </div>
                    <div class="">
                        <div class="text-md-center">
                            <button type="edit" class="btn btn-primary" asp-action="UpdateInformation" asp-controller="AdminUsers">Edit Profile <i class="icon-paperplane ml-2"></i></button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>

</div>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
    <partial name="~/Views/Bundle/_FormInputScriptsPartial.cshtml" />
    <partial name="~/Views/Bundle/_DateTimePickerScriptsPartial.cshtml" />

}
