            <label class="col-lg-3 col-form-label">Date of Birth:</label>
            <div class="col-lg-8">
                <input type="date" asp-for="DateOfBirth" class="form-control">
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
        </div>*@



                        <div class="d-flex justify-content-between">
                            <a asp-area="Member" asp-controller="Profile" asp-action="Profile" class="btn btn-light"><i class="icon-arrow-left52"></i> Back</a>
                            <button type="submit" class="btn btn-primary"><i class="icon-file-check2"></i> Save Information</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /basic layout -->

        </div>
    </div>
</div>



