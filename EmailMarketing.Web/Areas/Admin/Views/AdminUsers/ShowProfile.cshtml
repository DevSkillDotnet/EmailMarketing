@model AdminUsersShowProfileModel
@{
    ViewData["Title"] = "AdminInformation";
}

<!-- Page header -->
<div class="page-header">
    <div class="page-header-content header-elements-md-inline">
        <div class="page-title d-flex">
            <h4><a asp-controller="Dashboard" asp-action="Index" asp-area="Admin" class="text-black-50"><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">Dashboard</span></a></h4>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>

        <div class="header-elements d-none text-center text-md-left mb-3 mb-md-0">
            <a asp-controller="MemberUsers" asp-action="Index" asp-area="Admin" class="btn btn-labeled btn-labeled-right bg-primary"><i class="icon-list mr-2"></i> <span class="font-weight-semibold">User List</span></a>
        </div>
    </div>
</div>
<!-- /page header -->
<!-- Content area -->
<div class="content pt-0">

    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title text-primary">My Profile</h5>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <table class="table">
                        <tr>
                            <td class="col-4 float-left"><h5>User Name: </h5></td>
                            @if (@Model.UserName == null)
                            {
                                <td class="col-8 float-left"><h5>Not Set</h5></td>
                            }
                            else
                            {
                                <td class="col-8 float-left"><h5>@Model.UserName</h5></td>
                            }
                        </tr>
                        <tr>
                            <td class="col-4 float-left"><h5>Full Name : </h5></td>
                            @if (@Model.FullName == null)
                            {
                                <td class="col-8 float-left"><h5>Not Set</h5></td>
                            }
                            else
                            {
                                <td class="col-8 float-left"><h5>@Model.FullName</h5></td>
                            }
                        </tr>
                    
                        <tr>
                            <td class="col-4 float-left"><h5>Phone Number : </h5></td>
                            @if (@Model.PhoneNumber == null)
                            {
                                <td class="col-8 float-left"><h5>Not Set</h5></td>
                            }
                            else
                            {
                                <td class="col-8 float-left"><h5>@Model.PhoneNumber</h5></td>
                            }
                        </tr>
                       

                    </table>
                </div>
                <div class="col-6">
                    <table class="table">
                        <tr>
                            <td class="col-4 float-left"><h5>Address : </h5></td>
                            @if (@Model.Address == null)
                            {
                                <td class="col-8 float-left"><h5>Not Set</h5></td>
                            }
                            else
                            {
                                <td class="col-8 float-left"><h5>@Model.Address</h5></td>
                            }
                        </tr>
                        <tr>
                            <td class="col-4 float-left"><h5>Gender : </h5></td>
                            @if (@Model.Gender == null)
                            {
                                <td class="col-8 float-left"><h5>Not Set</h5></td>
                            }
                            else
                            {
                                <td class="col-8 float-left"><h5>@Model.Gender</h5></td>
                            }
                        </tr>
                        <tr>
                            <td class="col-4 float-left"><h5>Date of Birth : </h5></td>
                            @if (@Model.DateOfBirth == null)
                            {
                                <td class="col-8 float-left"><h5>Not Set</h5></td>
                            }
                            else
                            {
                                <td class="col-8 float-left"><h5>@Model.DateOfBirth</h5></td>
                            }
                        </tr>
                       

                    </table>
                </div>
            </div>
            <div class="">
                <div class="d-flex justify-content-between">
                    <a asp-controller="AdminUsers" asp-action="Index" asp-area="Admin" class="btn btn-light"><i class="icon-arrow-left52"></i> Back</a>
                    <a asp-controller="AdminUsers" asp-action="UpdateInformation" asp-area="Admin" class="btn btn-primary ml-2"><i class="icon-pencil7"></i> Edit</a>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /Content area -->
