@model EmailMarketing.Web.Models.ProfileInformationModel

@{
    ViewData["Title"] = "Profile";
}


<div class="content-wrapper">
    <div class="content">
        <div class="col-md-8" data-select2-id="49">

            <!-- Basic layout-->
            <div class="card" data-select2-id="48">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title"><b>Profile Information</b></h5>
                    <div class="header-elements">
                        <div class="list-icons">
                            <a class="list-icons-item" data-action="collapse"></a>
                            <a class="list-icons-item" data-action="reload"></a>
                            <a class="list-icons-item" data-action="remove"></a>
                        </div>
                    </div>
                </div>
                <!-- Change Password Form-->
                <div class="card-body" style="" data-select2-id="47">
                    <form method="get" data-select2-id="46">


                        <div class="form-group row">
                            <label class="col-md-4 col-form-label"><b>Full Name:</b></label>
                            <div class="col-lg-3 col-form-label">
                                <dd>@Html.DisplayFor(model => model.FullName)</dd>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label"><b>Address:</b></label>
                            <div class="col-lg-3 col-form-label">
                                <dd>@Html.DisplayFor(model => model.Address)</dd>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-4 col-form-label"><b>Date of Birth:</b></label>
                            <div class="col-lg-3 col-form-label">
                                <dd>@Html.DisplayFor(model => model.DateOfBirth)</dd>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label"><b>Email:</b></label>
                            <div class="col-lg-3 col-form-label">
                                <dd>@Html.DisplayFor(model => model.Email)</dd>
                            </div>
                        </div>


                        <div class="text-md-center">
                            <button type="edit" class="btn btn-primary" asp-action="UpdateInformation" asp-controller="Profile">Edit Profile <i class="icon-paperplane ml-2"></i></button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /basic layout -->

        </div>
    </div>
</div>

