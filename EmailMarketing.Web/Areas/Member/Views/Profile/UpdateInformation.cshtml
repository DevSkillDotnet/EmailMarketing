@using EmailMarketing.Membership.Entities
@inject UserManager<ApplicationUser> UserManager
@using Microsoft.AspNetCore.Identity
@model EmailMarketing.Web.Areas.Member.Models.ProfileModels.UpdateInformationModel
@{
    ViewData["Title"] = "Edit Information";
}


<div class="content-wrapper">
    <div class="content">
        <div class="col-md-12" data-select2-id="49">

            <!-- Basic layout-->
            <div class="card" data-select2-id="48">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title"><b>Edit Information</b></h5>
                    <div class="header-elements">
                        <div class="list-icons">
                            <a class="list-icons-item" data-action="collapse"></a>
                            <a class="list-icons-item" data-action="reload"></a>
                            <a class="list-icons-item" data-action="remove"></a>
                        </div>
                    </div>
                </div>
                <!-- Edit Info Form-->
                <div class="card-body" style="" data-select2-id="47">
                    <partial name="_ActionMessage" model="@Model.Response" />
                    <form asp-area="Member" asp-action="UpdateInformation" asp-controller="Profile" method="post">

                        <div asp-validation-summary="All" class="text-danger"></div>


                        <div class="">
                            <fieldset class="mb-3">

                                @Html.AntiForgeryToken()
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="row">
                                    <div class="col-md-6 border-right p-3">
                                       
                                        <div class="form-group row">
                                            <label class="col-form-label col-lg-4 required" asp-for="FullName"></label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" asp-for="FullName">
                                                <span asp-validation-for="FullName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-form-label col-lg-4 required" asp-for="Email"></label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" asp-for="Email">
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                        </div>


                                    </div>
                                    <div class="col-md-6 border-left p-3">

                                        <div class="form-group row">
                                            <label class="col-form-label col-lg-4 required" asp-for="Gender"></label>
                                            <div class="col-lg-6">

                                                <select asp-for="Gender" class="form-control">
                                                    @if (@Model.Gender != null)
                                                    {
                                                        @if (@Model.Gender.Equals("Male"))
                                                        {
                                                            <option value="Male" selected>Male</option>
                                                            <option value="Female">Female</option>
                                                        }
                                                        else if (@Model.Gender.Equals("Female"))
                                                        {
                                                            <option value="Female" selected>Female</option>
                                                            <option value="Male">Male</option>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <option value="">--- Select Gender ---</option>
                                                        <option value="Male">Male</option>
                                                        <option value="Female">Female</option>
                                                    }

                                                </select>
                                                <span asp-validation-for="Gender" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-form-label col-lg-4 required" asp-for="PhoneNumber"></label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" asp-for="PhoneNumber">
                                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-form-label col-lg-4 required" asp-for="Address"></label>
                                            <div class="col-lg-6">
                                                <textarea class="form-control" asp-for="Address"></textarea>
                                                <span asp-validation-for="Address" class="text-danger"></span>
                                            </div>
                                        </div>



                                    </div>

                                </div>

                            </fieldset>
                        </div>

                        @*<div class="form-group row">
            <label class="col-lg-3 col-form-label">Full Name:</label>
            <div class="col-lg-8">
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-lg-3 col-form-label">Address:</label>
            <div class="col-lg-8">
