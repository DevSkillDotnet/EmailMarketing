@model EditAdminUsersModel

@{
    ViewData["Title"] = "Edit";
}

<!-- Content area -->
<div class="content">
    <div class="pb-3">
        <h4 class="d-inline">Edit Admin Information</h4>
        <a asp-controller="AdminUsers" asp-action="Index" asp-area="Admin" class="btn btn-labeled btn-labeled-right bg-primary float-right"><i class="icon-list mr-2"></i> <span class="font-weight-semibold">Admin List</span></a>
    </div>
    <div class="row">
        <div class="col-12 m-auto">
            <div class="card">
                <div class="card-body">
                    <partial name="_ActionMessage" model="@Model.Response" />
                    <div class="">
                        <form asp-action="Edit" asp-controller="AdminUsers" asp-area="Admin">
                            <div class="">
                                <fieldset class="mb-3">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" asp-for="Id">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row">
                                        <div class="col-md-6 border-right p-2">
                                            @*<div class="form-group row">
                                                    <label class="col-form-label col-lg-4 required" asp-for="UserName"></label>
                                                    <div class="col-lg-8">
                                                        <input type="text" class="form-control" asp-for="UserName">
                                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                                    </div>
                                                </div>*@
                                            <div class="form-group row">
                                                <label class="col-form-label col-lg-4 required" asp-for="FullName"></label>
                                                <div class="col-lg-8">
                                                    <input type="text" class="form-control" asp-for="FullName">
                                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-form-label col-lg-4 required" asp-for="Email"></label>
                                                <div class="col-lg-8">
                                                    <input type="text" class="form-control" asp-for="Email">
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 border-left p-2">
                                            <div class="form-group row">
                                                <label class="col-form-label col-lg-4" asp-for="Gender"></label>
                                                <div class="col-lg-8">
                                                    <select asp-for="Gender" class="form-control">
                                                        @if (@Model.Gender != null)
                                                        {
                                                            @if (@Model.Gender.Equals("Male"))
                                                            {
                                                                <option value="Male" selected>Male</option>
                                                                <option value="Female">Female</option>
                                                            }
                                                            else if (@Model.Gender.Equals("Female"))
                                                            {
                                                                <option value="Female" selected>Female</option>
                                                                <option value="Male">Male</option>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <option value="">--- Select Gender ---</option>
                                                            <option value="Male">Male</option>
                                                            <option value="Female">Female</option>
                                                        }
                                                    </select>
                                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-form-label col-lg-4" asp-for="PhoneNumber"></label>
                                                <div class="col-lg-8">
                                                    <input type="text" class="form-control" asp-for="PhoneNumber">
                                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-form-label col-lg-4" asp-for="Address"></label>
                                                <div class="col-lg-8">
                                                    <textarea class="form-control" asp-for="Address"></textarea>
                                                    <span asp-validation-for="Address" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                            <div class="">
                                <div class="d-flex justify-content-between">
                                    <a asp-controller="AdminUsers" asp-action="Index" asp-area="Admin" class="btn btn-light"><i class="icon-arrow-left52"></i> Back</a>
                                    <button type="submit" class="btn bg-teal ml-2"><i class="icon-file-check2"></i> Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Content area -->

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
    <partial name="~/Views/Bundle/_FormInputScriptsPartial.cshtml" />
    <partial name="~/Views/Bundle/_DateTimePickerScriptsPartial.cshtml" />
}

