@model CampaignBaseModel
@{
    ViewData["Title"] = "Index";
}

<!-- Page header -->
<div class="page-header">
    <div class="page-header-content header-elements-md-inline">
        <div class="page-title d-flex">
            <h4><a asp-controller="Dashboard" asp-action="Index" asp-area="Member" class="text-black-50"><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">Member</span></a></h4>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>

        @*<div class="header-elements d-none text-center text-md-left mb-3 mb-md-0">
                <a asp-controller="Campaigns" asp-action="Add" asp-area="Member" class="btn btn-labeled btn-labeled-right bg-primary"><i class="icon-plus-circle2 mr-2"></i> <span class="font-weight-semibold">New Expense</span></a>
            </div>*@
    </div>
</div>
<!-- /page header -->
<!-- Content area -->
<div class="content pt-0">
    <!-- Basic datatable -->
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title">Campaign List</h5>
            <div class="header-elements">
                <div class="list-icons">
                    <a class="list-icons-item" data-action="collapse"></a>
                    <a class="list-icons-item" data-action="reload"></a>
                    <a class="list-icons-item" data-action="remove"></a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <partial name="_ActionMessage" model="@Model.Response" />
        </div>

        <table class="table" id="campaign-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Processing</th>
                    <th>Succeed</th>
                     <th>Send Date Time</th>
                    <th>Send Email Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
  
@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
    <partial name="~/Views/Bundle/_DatatableScriptsPartial.cshtml" />
    <script src="~/js/ajax-call.js"></script>
    <script src="~/theme/global_assets/js/main/jquery.min.js"></script>
    <script src="~/theme/global_assets/js/main/bootstrap.bundle.min.js"></script>
    <script src="~/theme/global_assets/js/plugins/tables/datatables/datatables.min.js"></script>
    <script src="~/js/project/campaign.js"></script>

    <script>
        $(function () {
            var url = '@Url.Action("ViewCampaigns", "Campaigns", new { Area = "Member" })';
            var ReportUrl = '@Url.Action("ViewDeleveryReport", "Campaigns", new { Area = "Member" })';
            loadDatatable(url, ReportUrl);
          
        });
    </script>


}